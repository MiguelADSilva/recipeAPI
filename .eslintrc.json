{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "jest": true,
        "commonjs": true,
        "es2021": true
    },
    "plugins": ["react", "jsx-a11y", "import"],
    "extends": "standard",
    "rules": {
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "parserOptions": {
        "ecmaVersion": 12
        },
      "global-require": "off",
      "import/prefer-default-export": "off",
      "no-unused-expressions": ["error", { "allowTaggedTemplates": true }]
    }
  }